#!/bin/bash  
# description: Tomcat Start Stop Restart  
# processname: tomcat  
# chkconfig: 234 20 80  
#JAVA_HOME=/usr/java/jdk1.7.0_05  
#export JAVA_HOME  
#PATH=$JAVA_HOME/bin:$PATH  
#export PATH    

CATALINA_HOME=<%= @catalina_home%>  
export CATALINA_HOME

tomcat=<%= @tomcat_group_or_group%>
  
case $1 in  
start)  
su tomcat sh $CATALINA_HOME/bin/startup.sh  
;;   
stop)     
su tomcat sh $CATALINA_HOME/bin/shutdown.sh  
;;   
restart)  
su tomcat sh $CATALINA_HOME/bin/shutdown.sh  
su tomcat sh $CATALINA_HOME/bin/startup.sh  
;;   
esac      
exit 0  
